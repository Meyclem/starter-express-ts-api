{
  "name": "starter-express-ts-api",
  "version": "0.0.1",
  "main": "src/index.ts",
  "license": "WTFPL",
  "type": "module",
  "scripts": {
    "build": "rm -rf build && tsc",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint . --ignore-pattern '**.config.{js,cjs}' --ignore-pattern 'build' --fix",
