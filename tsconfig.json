{
  "compilerOptions": {
    "lib": ["es5", "es6", "ESNext", "DOM"],
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["**/*"],
  "exclude": ["./build", "node_modules"]
}
