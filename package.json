  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@stylistic/eslint-plugin-ts": "2.12.1",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/morgan": "1.9.9",
    "@types/node": "22.10.5",
    "@types/supertest": "6.0.2",
    "dotenv": "16.4.7",
    "eslint": "9.18.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "prettier": "3.4.2",
    "supertest": "7.0.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.19.1",
    "vitest": "2.1.8"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.21.2",
    "helmet": "8.0.0",
    "morgan": "1.10.0",
    "tsx": "^4.19.2"
